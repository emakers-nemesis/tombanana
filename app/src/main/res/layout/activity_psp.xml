<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.emakers.tombanana.CenActivity">
    <ImageView
        android:id="@+id/image_psp"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/pesosegundapenca"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/btn_psp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Próximo"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="230dp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_alignBaseline="@+id/btn_psp_ant"
        android:layout_alignBottom="@+id/btn_psp_ant"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_psp_ant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anterior"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="74dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_psp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite o peso da segunda penca."
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:typeface="serif"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText_psp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_above="@+id/btn_psp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Peso da segunda penca de cada cacho, considerada de referência, expresso em quilogramas.)"
        android:gravity="center"
        android:typeface="serif"
        android:textColor="@color/colorPrimaryDark"
        android:layout_above="@+id/editText_psp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp" />
</RelativeLayout>
